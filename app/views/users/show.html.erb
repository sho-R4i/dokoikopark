<style>
  .post {
    background-color: #ffce9e;
  }
  .favorite {
    background-color: #ffce9e;
  }
  .comment {
    background-color: #ffce9e;
  }
</style>

  <div class="row">
    <div class="col-5 mt-3 text-left">
      <%= link_to "ホーム", parks_path %> >> ユーザーページ
    </div>
  </div>
  
  <div class="mt-3">
    <div style="display: flex; align-items: center;">
      <%= image_tag(@user.get_profile_image(50, 50), alt: @user.name, class: "avatar rounded-circle mr-3") %>
      <h3 style="margin-right: 20px;"><%= @user.name %>さんのページ</h3>
      <% if @user.id == current_user.id %>
      <%= link_to "登録情報編集", edit_user_path(@user), class: "btn btn-success" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="post col-6 mt-3 border border-dark rounded">
      <h5 class="mt-2">投稿履歴一覧</h5>
        <ul>
          <% @parks.each do |park| %>
            <li><%= link_to park.park_name, park_path(park.id) %></li>
          <% end %>
        </ul>
    </div>
    
    <div class="favorite col-3 mt-3 border border-dark rounded">
      <h5 class="mt-2">いいねした投稿</h5>
        <ul>
          <% @favorited_parks.each do |park| %>
            <li><%= link_to park.park_name, park_path(park.id) %></li>
          <% end %>
        </ul>
    </div>
    
    <div class="comment col-3 mt-3 border border-dark rounded">
      <h5 class="mt-2">コメントした投稿</h5>
        <ul>
          <% @comment_parks.each do |park| %>
            <li><%= link_to park.park_name, park_path(park.id) %></li>
          <% end %>
        </ul>
    </div>
  </div>
</div>