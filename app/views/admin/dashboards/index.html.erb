<div class="row">
  <div class="ml-3 mt-3 mb-3">
    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
  </div>
</div>

<h1>全ユーザー一覧</h1>


<div class="row">
  <div class="col-md-2">
    <%= render 'admin/shared/dashboard_buttons' %>
  </div>
  <div class="col-md-10">
    <%= form_with url: admin_dashboards_path, method: :get do |f| %>
      <%= f.search_field :keyword, value: params[:keyword] %>
    
      <%= f.submit "search" %>
    <% end %>
    
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>email</th>
          <th>name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.name %></td>
            <td><%= link_to '削除', admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>