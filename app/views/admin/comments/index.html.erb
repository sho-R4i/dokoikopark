<h1>全コメント一覧</h1>

<div class="row">
  <div class="col-md-2">
    <%= render 'admin/shared/dashboard_buttons' %>
  </div>
  <div class="col-md-10">
    <%= form_with url: admin_comments_path, method: :get do |f| %>
      <%= f.search_field :keyword, value: params[:keyword] %>
    
      <%= f.submit "search" %>
    <% end %>
    
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>id</th>
          <th>comment</th>
          <th>comment_user</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
          <tr>
            <td><%= comment.id %></td>
            <td><%= comment.comment %></td>
            <td><%= comment.user.name %></td>
            <td><%= link_to "destroy", admin_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


